<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/re"
    tools:context=".subhome">

    <include

        layout="@layout/toolbar"
        android:id="@+id/tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <ImageView

        android:id="@+id/hawa"
        android:layout_width="167dp"
        android:layout_height="100dp"
        android:layout_below="@+id/tool"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="33dp"
        android:layout_marginRight="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/hawa" />

    <ImageView
        android:id="@+id/victor"
        android:layout_width="150dp"
        android:layout_height="145dp"
        android:layout_below="@+id/tool"
        android:layout_alignLeft="@+id/hawa"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="184dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="57dp"
        android:scaleType="fitXY"
        android:src="@drawable/victor" />
    <ScrollView
        android:layout_marginTop="10dp"
        android:layout_below="@+id/victor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

           <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
               <Button
                android:id="@+id/button"
                android:backgroundTint="@color/mycolor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="सामग्री:"
                android:textAlignment="viewStart"
                android:textColor="#fff"
                   android:textStyle="bold"/>

                <TextView
                    android:layout_marginLeft="7dp"
                android:id="@+id/content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" djdjdko"
                android:textColor="#000"
                android:textSize="15dp"
                />

               <Button
               android:layout_marginTop="15dp"
               android:id="@+id/button2"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="विधि: "
               android:backgroundTint="@color/mycolor"
               android:textAlignment="viewStart"
               android:textColor="#fff"
               android:textStyle="bold"/>

               <TextView
                   android:layout_marginLeft="7dp"
                android:id="@+id/content2"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sjsn"
                android:textColor="#000"
                   android:textSize="15dp"/>

           </LinearLayout>

    </TableLayout>

    </ScrollView>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        fab:menu_animationDelayPerItem="55"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_buttonSpacing="0dp"
        fab:menu_colorNormal="#da3c2f"
        fab:menu_colorPressed="#dc4b3f"
        fab:menu_colorRipple="#99d4d4d4"
        fab:menu_fab_size="normal"
        fab:menu_icon="@drawable/dott"
        fab:menu_labels_colorNormal="#333"
        fab:menu_labels_colorPressed="#444"
        fab:menu_labels_colorRipple="#66efecec"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_padding="8dp"
        fab:menu_labels_position="left"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_showShadow="false"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_textColor="#f2f1f1"
        fab:menu_labels_textSize="15sp"
        fab:menu_openDirection="up">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rate"
            fab:fab_label="Rate us"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wdil"
            fab:fab_label="Favorite"
            fab:fab_size="mini" />


        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share"
            fab:fab_label="Share"
            fab:fab_size="mini" />
    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>
